<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ProgressBar
            android:indeterminateDrawable="@drawable/spinner"
            android:indeterminateOnly="true"
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:id="@+id/progressBar"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Отправка запроса"
            android:id="@+id/textViewProgressBar"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:paddingTop="10dp" />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ff0a4e74">
            <Button android:id="@+id/buttonMonitor1"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_weight="0.31"
                android:text="Монитор 1"
                android:background="#ff2276a3"    android:onClick="onClickStart"
                android:textSize="19dp"
                android:textColor="#ffffffff"
                android:elegantTextHeight="false"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_gravity="top"
                android:layout_marginRight="1dp" />
            <Button android:id="@+id/buttonMonitor2"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Монитор 2"
                android:background="#ff2276a3"    android:onClick="onClickStart"
                android:textSize="19dp"
                android:layout_weight="0.31"
                android:textColor="#ffffffff"
                android:elegantTextHeight="false"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_gravity="top"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp" />
            <Button android:id="@+id/buttonMonitor3"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Монитор 3"
                android:background="#ff2276a3"    android:onClick="onClickStart"
                android:textSize="19dp"
                android:layout_weight="0.31"
                android:textColor="#ffffffff"
                android:elegantTextHeight="false"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_gravity="top"
                android:layout_marginLeft="1dp" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView"
            android:layout_gravity="center_horizontal|" />

    </LinearLayout>
</FrameLayout>