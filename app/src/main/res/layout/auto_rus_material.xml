<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbarStyle="insideOverlay">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:src="@drawable/screen1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:src="@drawable/screen2"
                android:paddingRight="15dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:src="@drawable/screen4"
                android:paddingRight="15dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:src="@drawable/screen3"
                android:paddingRight="15dp"/>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:scrollbarStyle="insideOverlay">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/cancel_auto_rus"
                android:text="Не сейчас"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/download_auto_rus"
                android:text="Скачать"
                />
        </LinearLayout>
</LinearLayout>