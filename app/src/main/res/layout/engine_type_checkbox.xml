<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Бензин"
        android:id="@+id/checkBoxenginetype1"
        android:layout_gravity="left"
        android:textSize="20dp"
        android:checked="false"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дизель"
        android:id="@+id/checkBoxenginetype2"
        android:layout_gravity="left"
        android:textSize="20dp"
        android:checked="false"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Гибрид"
        android:id="@+id/checkBoxenginetype3"
        android:layout_gravity="left"
        android:textSize="20dp"
        android:checked="false"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Газ"
        android:id="@+id/checkBoxenginetype4"
        android:layout_gravity="left"
        android:textSize="20dp"
        android:checked="false"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Электро"
        android:id="@+id/checkBoxenginetype5"
        android:layout_gravity="left"
        android:textSize="20dp"
        android:checked="false"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/enginetypeCheckBox"
        android:text="Применить"
        />
</LinearLayout>